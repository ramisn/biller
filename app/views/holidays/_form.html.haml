= form_for @holiday do |f|
  -if @holiday.errors.any?
    #error_explanation
      %h2= "#{pluralize(@holiday.errors.count, "error")} prohibited this holiday from being saved:"
      %ul
        - @holiday.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :holiday_for
    = f.text_field :holiday_for
  .field
    = f.label :holiday_date
    = f.text_field :holiday_date, :as=>:string, :readonly=>true
  .actions
    = f.submit 'Save'
