<h1>Sign up</h1>
<%= semantic_form_for(resource, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= f.semantic_fields_for :organization do |org| %>
    <%= org.input :name, :label => "Company Name" %>
  <% end %>
  <%= f.inputs do %>  
    <%= f.input :display_name, :label => "Your Name" %>
		<%= f.input :email %>
	  <%= f.input :password %>	
		<%= f.input :password_confirmation %>
  <% end %>
  
	<%= f.buttons do %>
    <%= f.commit_button :label => "Sign Up", :button_html => {:class => [:btn, :primary] } %>
  <% end %>
<% end %>

