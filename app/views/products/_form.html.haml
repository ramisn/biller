= semantic_form_for @product do |f|
  = f.inputs do
    = f.input :name
    = f.input :unit_price
    = f.input :key
    = f.input :description, :input_html => { :rows => 5, :cols => 8 }
  = f.buttons do
    = link_to "Cancel", :back, :class => "float-right"
    = f.commit_button  :button_html => { :class=>"primary" }
